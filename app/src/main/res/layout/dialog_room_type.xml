<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:padding="5dp"
        android:gravity="center"
        android:text="当前可选房型"
        android:background="@color/orange"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_type_stand"
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_touch_bg"
            android:text="标准房\n400"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_type_big"
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_touch_bg"
            android:text="大床房\n266"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_touch_bg"
            android:text="商务房\n344"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_touch_bg"
            android:text="总统房\n1555"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_margin="40dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/bt_type_cancel"
            android:background="@drawable/button_touch_bg"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="20dp"
            android:text="取消"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_margin="40dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/bt_type_submit"
            android:background="@drawable/button_touch_bg"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="20dp"
            android:text="确认"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_margin="40dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>