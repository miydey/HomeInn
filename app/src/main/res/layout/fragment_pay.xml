<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha_black">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/iv_pay"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="80dp"
    android:src="@mipmap/qr_bg"
    android:layout_width="250dp"
    android:layout_height="250dp" />
    <TextView
        android:id="@+id/tv_pay_type"
        android:layout_below="@id/iv_pay"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:paddingLeft="40dp"
        android:paddingRight="40sp"
        android:layout_marginTop="20dp"
        android:text="请打开支付宝钱包"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/tv_pay_type"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:paddingLeft="40dp"
        android:paddingRight="40sp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="扫码进行付款"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <LinearLayout
        android:padding="40dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="80dp"
            android:id="@+id/tv_pay_room_name"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_pay_room_type"
        android:textColor="@color/white"
        android:textSize="40sp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tv_pay_room_number"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:text="房间号XXX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tv_pay_room_day"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:text="1晚"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tv_pay_room_price"
            android:textColor="@color/white"
            android:textSize="60sp"

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="40dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_pay_count"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:text="1秒后自动退出"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_ali_pay"
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:padding="10dp"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:drawableLeft="@mipmap/bt_ali_pay"
        android:text="支付宝"/>
        <Button
            android:id="@+id/bt_wechat_pay"
            android:layout_marginTop="80dp"
            android:padding="10dp"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:drawableLeft="@mipmap/bt_wechat_pay"
            android:text="微信支付"/>
    </LinearLayout>
</LinearLayout>
