<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/alpha_black"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <TextView
        android:text="入住日期"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
        <ImageView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:src="@mipmap/frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
       <LinearLayout

           android:orientation="vertical"
           android:layout_width="wrap_content"
           android:layout_height="match_parent">
           <TextView
               android:layout_margin="20dp"
               android:background="@drawable/shape_edit"
               android:paddingLeft="40dp"
               android:paddingRight="40dp"
               android:id="@+id/tv_date_start"
               android:textSize="30sp"
               android:gravity="center"
               android:textColor="@color/grgray"
               android:layout_width="300dp"
               android:layout_weight="1"
               android:singleLine="true"
               android:layout_height="0dp" />
           <TextView
               android:layout_margin="20dp"
               android:background="@drawable/shape_edit"
               android:paddingLeft="40dp"
               android:paddingRight="40dp"
               android:id="@+id/tv_date_end"
               android:textSize="30sp"
               android:gravity="center"
               android:textColor="@color/black"
               android:layout_weight="1"
               android:layout_width="300dp"
               android:singleLine="true"
               android:layout_height="0dp" />
       </LinearLayout>


        <TextView
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/tv_selected_date_end"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@drawable/button_touch_bg"
            android:text="离 店 日 期 "
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_order_days"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginLeft="40dp"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_weight="2">
        <TextView
            android:text="房间类型"
            android:textSize="30sp"
            android:gravity="center"

            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        
        <TextView
            android:id="@+id/tv_type_stand"
            android:padding="10dp"
            android:textColor="@color/backGrey"
            android:background="@drawable/type_touch_bg"
            android:text="标准房\n400"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/backGrey"
            android:id="@+id/tv_type_big"
            android:padding="10dp"
            android:background="@drawable/type_touch_bg"
            android:text="大床房\n266"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:textColor="@color/backGrey"
            android:background="@drawable/type_touch_bg"
            android:text="商务房\n344"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:textColor="@color/backGrey"
            android:background="@drawable/type_touch_bg"
            android:text="总统房\n1555"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView

            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_order_submit"
            android:padding="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button_touch_bg"
            android:text="下一步"
            android:textSize="30sp"

            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--ListView
        android:layout_weight="5"
        android:id="@+id/lv_order"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </ListView-->
</LinearLayout>
