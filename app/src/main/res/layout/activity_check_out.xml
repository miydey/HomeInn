<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_night"
    android:alpha="10"
    android:orientation="vertical">

    <include layout="@layout/layout_top2">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="120dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/card_frame"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_check_out_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:src="@mipmap/card_home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/white"
                android:textSize="80sp"
                android:gravity="center"
                android:text="请插入房卡"
                android:layout_marginTop="120dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_checkOut" />
            <TextView
                android:textColor="@color/white"
                android:textSize="60sp"
                android:gravity="center"

                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_count_check_out" />
            <TextView
                android:textColor="@color/white"
                android:textSize="60sp"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:background="@drawable/button_touch_bg"
                android:text="已收卡"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_recycle" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
