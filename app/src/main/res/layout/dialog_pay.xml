<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_pay"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:background="@mipmap/qr_bg"
                android:layout_width="250dp"
                android:layout_height="250dp" />
            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_below="@id/iv_pay"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:paddingLeft="40dp"
                android:paddingRight="40sp"
                android:layout_marginTop="20dp"
                android:text="请打开支付宝钱包"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/tv_pay_type"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:paddingLeft="40dp"
                android:paddingRight="40sp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="扫码进行付款"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:padding="40dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="80dp"
                android:id="@+id/tv_pay_room_name"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tv_pay_room_number"

                android:textSize="40sp"
                android:text="收费明细"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tv_pay_room_day"

                android:textSize="40sp"
                android:text="...."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tv_pay_room_price"
                android:textColor="@color/white"
                android:textSize="60sp"
                android:text="￥98"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:padding="40dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_pay_count"
                android:textSize="40sp"
                android:text="1秒后自动退出"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/bt_ali_pay"
                android:layout_width="match_parent"
                android:layout_marginTop="80dp"
                android:padding="10dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:drawableLeft="@mipmap/bt_ali_pay"
                android:text="支付宝"/>
            <Button
                android:id="@+id/bt_wechat_pay"
                android:layout_marginTop="80dp"
                android:padding="10dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:drawableLeft="@mipmap/bt_wechat_pay"
                android:text="微信支付"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_pay_cancel"
            android:padding="20dp"
            android:background="@drawable/button_touch_bg"
            android:text="上一步"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
