<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:orientation="vertical">
    <TextView
        android:textSize="60sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="订单信息"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="@color/FaceColor"
        android:padding="40dp"
        android:orientation="vertical"
       android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="80dp"
            android:id="@+id/tv_pay_room_name"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:text="入住人：XXX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tv_pay_room_type"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:text="高级大床房"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tv_pay_room_number"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:text="房间号XXX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tv_pay_room_day"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:text="1晚"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tv_pay_room_price"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:text="￥419"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
